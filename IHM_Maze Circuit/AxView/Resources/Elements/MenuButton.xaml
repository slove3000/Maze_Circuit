<UserControl x:Class="AxView.Resources.Elements.MenuButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:res="clr-namespace:AxLanguage;assembly=AxLanguage"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="1228">
    <Grid>
        <GroupBox Header="" Height="90">
            <Grid Background="Silver">
                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                    <Button Command="{Binding DataContext.ChangePageCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" CommandParameter="0" Content="{x:Static res:Languages.REAplan_Home}" Height="50" Name="button3" Width="120" FontSize="24" Margin="6,6,12,6" />
                </StackPanel>
            </Grid>
        </GroupBox>           
    </Grid>
</UserControl>
